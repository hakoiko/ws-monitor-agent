{
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"rules": {
		"semi": 1,
		"eqeqeq": "smart",
		"quotes": [2, "single"],
		"indent": [2, "tab"],
		"no-undef": 2,
		"no-unused-vars": 1,
		"no-use-before-define": 2,
		"space-before-function-paren": [1, {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "always"
		}]
	}
}